<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Notifikasi">

        <SwitchPreferenceCompat
            app:key="notification_enabled"
            app:title="Aktifkan Notifikasi"
            app:summary="Tampilkan pengingat beberapa hari sebelum kedaluwarsa"
            app:defaultValue="true" />

        <EditTextPreference
            app:key="notification_days"
            app:title="Hari Notifikasi"
            app:summary="Jumlah hari sebelum kedaluwarsa (contoh: 3)"
            app:defaultValue="3"
            app:dependency="notification_enabled" />

        <EditTextPreference
            app:key="notification_time"
            app:title="Waktu Notifikasi"
            app:summary="Waktu pengingat dalam format HHmm (contoh: 0900)"
            app:defaultValue="0900"
            app:dependency="notification_enabled" />

    </PreferenceCategory>

</PreferenceScreen>